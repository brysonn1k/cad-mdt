
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dispatch Console</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <nav>
      <a href="/dashboard">Back</a>
      <span>Dispatch Console</span>
      <form method="post" action="/logout" style="display:inline"><button>Logout</button></form>
    </nav>
  </header>

  <main class="grid-2">
    <section class="card">
      <h2>Open Calls</h2>
      <table>
        <thead><tr><th>ID</th><th>Type</th><th>Description</th><th>Status</th><th>Assign</th></tr></thead>
        <tbody>
          <% calls.forEach(c => { %>
            <tr>
              <td><%= c.id %></td><td><%= c.type %></td><td><%= c.description %></td><td><%= c.status %></td>
              <td>
                <form method="post" action="/calls/<%= c.id %>/assign">
                  <select name="unit_id">
                    <% units.forEach(u => { %>
                      <option value="<%= u.id %>"><%= u.callsign %> (<%= u.status %>)</option>
                    <% }) %>
                  </select>
                  <button>Assign</button>
                </form>
                <form method="post" action="/calls/<%= c.id %>/status">
                  <select name="status">
                    <option<%= c.status==='OPEN'?' selected':'' %>>OPEN</option>
                    <option<%= c.status==='ENROUTE'?' selected':'' %>>ENROUTE</option>
                    <option<%= c.status==='ON SCENE'?' selected':'' %>>ON SCENE</option>
                    <option<%= c.status==='CLOSED'?' selected':'' %>>CLOSED</option>
                  </select>
                  <button>Update</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="card">
      <h2>Units</h2>
      <table>
        <thead><tr><th>Callsign</th><th>Dept</th><th>Status</th><th>Location</th></tr></thead>
        <tbody>
          <% units.forEach(u => { %>
            <tr>
              <td><%= u.callsign %></td><td><%= u.department %></td>
              <td><%= u.status %></td><td><%= u.location || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
